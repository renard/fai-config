# contrack Issues
net.ipv4.netfilter.ip_conntrack_tcp_timeout_established=86400
net.netfilter.nf_conntrack_tcp_timeout_established=86400
net.ipv4.netfilter.ip_conntrack_max=131072
net.netfilter.nf_conntrack_max=131072
net.netfilter.nf_conntrack_tcp_timeout_established = 60
net.ipv4.netfilter.ip_conntrack_tcp_timeout_established = 60

net.netfilter.nf_conntrack_tcp_timeout_time_wait = 10
net.ipv4.netfilter.ip_conntrack_tcp_timeout_time_wait = 10
