disk_config disk1 bootable:1 disklabel:gpt-bios
#disk_config disk1 disklabel:msdos fstabkey:uuid


primary		/boot	256		ext3	rw,errors=remount-ro createopts="-L /boot -m 5"
primary		-	0-		-	-

disk_config cryptsetup
luks:"test"     -		disk1.2		-	-

disk_config lvm
vg		vg00		disk1.2
vg00-swap	swap		2g-4g		swap	sw
vg00-root	/		4g		xfs	rw createopts="-f -L /"
#vg00-boot	/boot		256		xfs	rw createopts="-f -L /boot"
vg00-tmp	/tmp		1g-2g		xfs	rw,noatime,nosuid,nodev,noexec createopts="-f -L /tmp"
vg00-usr	/usr		4g		xfs	rw createopts="-f -L /usr"
vg00-var	/var		4g		xfs	rw createopts="-f -L /var"
vg00-var_tmp	/var/tmp	1g-2g		xfs	rw,noatime,nosuid,nodev,noexec createopts="-f -L /var/tmp"
vg00-srv 	/srv		0-100%		xfs	rw createopts="-f -L /srv"

